#version 410

// Uniforms / SSBO ----------------------------------------------------------------------------------------------------

// Input --------------------------------------------------------------------------------------------------------------
in block {
    vec3 v3Color;
} In;

//  Output ------------------------------------------------------------------------------------------------------------
layout(location = 0) out vec4 Out_v4Color;

// Functions ----------------------------------------------------------------------------------------------------------
void main()
{
    Out_v4Color = vec4(In.v3Color, 1);
}
